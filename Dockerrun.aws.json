{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions" : [
        {
            "name": "frontend",
            "image": "qlqhtlrrl45/docker-frontend",
            "hostname": "frontend",
            "essential" : false,
            "memory": 128
        },
        {
            "name": "backend",
            "image": "qlqhtlrrl45/docker-backend",
            "hostname": "backend",
            "essential": false,
            "memory" : 128
        },
        {
            "name": "nginx",
            "image": "qlqhtlrrl45/docker-nginx",
            "hostname": "nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : "80",
                    "containerPort" : "80"
                }
            ],
            "link" : [
                "frontend","backend"
            ],
            "memory": 128
        }
    ]
}